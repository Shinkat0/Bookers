<% if flash[:notice] %>
<p><%= flash[:notice] %></p>
<% end %>

<div class="container">
    <div class="row">
        <div class="col-xs-3">
        	<h2>User info</h2>
			<br>
			<%= attachment_image_tag @user, :profile_image,:fill, 320, 320, fallback: 'Noimage.png', size:'130x130' %>
			<table class="table">

				<tr>
					<th>name</th>
					<th><%= @user.name %></th>
				</tr>
				<tr>
					<th>introdution</th>
					<th><%= @user.Introduction %></th>
				</tr>

			</table>

			<a href="/users/:id/edit" class="btn btn-primary btn-block btn-sm" role="button"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></a>

			<br>
			<br>
			<br>
			<h2>New book</h2>

			<%= form_for(@book) do |f| %>

			<% if @book.errors.any? %>
			  <div class="alert alert-warning">
			    <ul>
			      <% @book.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
			      <% end %>
			    </ul>
			  </div>
			<% end %>
			<h4>Titile</h4>
			<%= f.text_field :title %>

			<h4>Opinion</h4>
			<%= f.text_area :body %>

			<br>
			<br>

			<%= f.submit class: "btn  btn-primary w-100" 'Create Book' %>

			<% end %>


        </div>
        <div class="col-xs-9">
        	<h2>Books</h2>
			<br>
			<table class="table">
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
				<tr>
					<td>写真</td>
					<td>タイトル</td>
					<td>内容</td>
				</tr>
			</table>
        </div>
    </div>
</div>

