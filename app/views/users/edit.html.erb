
<h1>User info</h1>


<%= form_for(@user) do |f| %>

      <% if @user.errors.any? %>
        <div class="alert alert-warning">
          <h2><%= @user.errors.count %>件のerrorがあります。</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <h4>Name</h4>
      <%= f.text_field :name %>

      <h4>Image</h4>
      <%= f.attachment_field :profile_image  %>

      <h4>Introduction</h4>
      <%= f.text_area :introduction %>

      <br>
      <br>

      <%= f.submit class: "btn  btn-primary w-100" 'Update User' %>

      <% end %>