<% if flash[:notice] %>
<p><%= flash[:notice] %></p>
<% end %>

<div class="container">
	<div class="row">
		<%= render 'users/list', book: @book_new ,user: @user %>
	<div class="col-xs-9">
		<h2>Book detail</h2>
		<br>
		<table class="table">
			<tr>
				<td><%= link_to(user_path(@book.user)) do %>
					<%= attachment_image_tag @book.user, :profile_image,:fill, 320, 320, fallback: 'Noimage.png', size:'50x50' %><br>
					<%= @book.user.name %>
					<% end %>
					</td>
				<td><%= @book.title %></td>
				<td><%= @book.body %></td>

				<% if current_user == @book.user %>
				<td><%= link_to 'Edit', edit_book_path, class: "btn  btn-success w-50px"%></td>
				<td><%= link_to 'Destroy', book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn  btn-danger w-50px"%></td>
				<% end %>
			</tr>
		</table>



		</div>
	</div>
</div>

