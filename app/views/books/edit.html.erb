<h1>Editing Book</h1>


<%= form_for(@book) do |f| %>

      <% if @book.errors.any? %>
        <div class="alert alert-warning">
        	<h2><%= @book.errors.count %>件のerrorがあります。</h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>Opinion</h4>
      <%= f.text_area :body %>

      <br>
      <br>

      <%= f.submit class: "btn  btn-primary w-100" 'Update Book' %>

      <% end %>

<br>
<%= link_to "show",book_path(@book.id) %>
<%= link_to "back",books_path %>